.list .item{
  display: flex;
  margin: 0 10px;
  border-bottom: 2px solid white;
  padding: 15px 0;
  align-items: center;
  height: 45px;
  background-color: white;
  border-radius: 8px;
}
.item .left{
  flex: 1 0 80%;
  font-size: small;
}
.item .edit,.choice{
  flex: 1 0 10%;
  text-align: center;
}
.item .edit image{
  width: 30px;
  height: 30px;
}
.item .choice image{
  width: 26px;
  height: 26px;
}

.btn{
  height: 8vh;
  line-height: 8vh;
  text-align: center;
  background:#e5999e;
  font-size: medium;
  color: #fff;
}