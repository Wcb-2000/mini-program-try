<view style='height:100vh;'>
<scroll-view scroll-y style='height:92vh;'>
  <view class='list'>
    <view class='item' wx:for="{{list}}" wx:key="*this">
      <view class='left'>
        <view>收货人：{{item.name}} 手机号：{{item.mobile}}</view>
        <view>地址：{{item.city[0]}} {{item.city[1]}} {{item.city[2]}} {{item.detailed}}</view>
      </view>
      <navigator url="/pages/addlocation/addlocation?city={{item.city[0]}},{{item.city[1]}},{{item.city[2]}}&mobile={{item.mobile}}&name={{item.name}}&detailed={{item.detailed}}"  class='edit'>
        <image src='../../images/edit.png'></image>
      </navigator>
      <view class='choice' wx:if="{{item._id != id}}" bindtap='defaultFun' data-item="{{item}}">
        <image src='../../images/favorite1.png'></image>
      </view>
       <view class='choice' wx:else>
        <image src='../../images/favorite.png'></image>
      </view>
    </view>
  </view>
</scroll-view>
<navigator url="/pages/addlocation/addlocation" class='btn'>
 新增收货地址
</navigator>
</view>